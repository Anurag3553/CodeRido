<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview in Progress</title>
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <style>
        /* public/css/style.css */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7f6;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            text-align: center;
        }

        h1 {
            color: #4CAF50;
            margin-bottom: 10px;
        }

        p {
            color: #666;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }

        input[type="text"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        input:focus,
        textarea:focus {
            border-color: #4CAF50;
            outline: none;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 15px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #45a049;
        }

        .interview-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .timer {
            font-size: 1.2em;
            font-weight: bold;
            color: #d9534f;
        }

        .interview-box {
            text-align: left;
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #eee;
        }

        .ai-question {
            font-size: 1.2em;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .user-input-area {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        #user-answer {
            resize: vertical;
        }

        #send-btn {
            align-self: flex-end;
            padding: 10px 20px;
        }

        #voice-btn {
            background-color: #007BFF;
            color: white;
            padding: 10px;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            border: none;
            cursor: pointer;
            align-self: flex-end;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="interview-header">
            <h2>Interview for <%= jobProfile %>
            </h2>
            <div class="timer">Time Remaining: <span id="time-display"></span></div>
        </div>
        <div class="interview-box">
            <div class="ai-question" id="ai-question">
                <%= lastQuestion %>
            </div>
            <div class="user-input-area">
                <textarea id="user-answer" placeholder="Type your response or use voice input..."></textarea>
                <button id="send-btn">Send</button>
                <button id="voice-btn">ðŸŽ¤</button>
            </div>
        </div>
    </div>
    <div class="quit">
        <a href="/CodeRido/interview">Quit</a>
    </div>
    <script>
        const interviewId = "<%= interviewId %>";
        const timeDuration = "<%= timeDuration %>";
    </script>
    <script src="/js/interview.js"></script>
</body>

</html>